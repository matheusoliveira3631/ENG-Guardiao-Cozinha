<%- include('../layout', { pageTitle: 'Produtos', activeMenu: 'produtos' }) %>
<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-semibold">Produtos</h1>
  <a href="/produtos/novo" class="inline-flex items-center rounded bg-indigo-600 px-4 py-2 text-white text-sm font-medium hover:bg-indigo-700">Novo Produto</a>
</div>

<div class="overflow-x-auto bg-white shadow rounded-lg">
  <table class="min-w-full">
    <thead>
      <tr class="bg-gray-100 text-left text-sm text-gray-700">
        <th class="px-4 py-3">Nome</th>
        <th class="px-4 py-3">Categoria</th>
        <th class="px-4 py-3">Quantidade</th>
        <th class="px-4 py-3">Status</th>
        <th class="px-4 py-3">Data de Validade</th>
        <th class="px-4 py-3">Ações</th>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% if (produtos && produtos.length) { %>
        <% produtos.forEach(p => { %>
          <tr class="text-sm">
            <td class="px-4 py-3"><%= p.nome %></td>
            <td class="px-4 py-3"><%= p.categoria %></td>
            <td class="px-4 py-3"><%= p.quantidade %></td>
            <td class="px-4 py-3">
              <span class="inline-flex rounded px-2 py-0.5 text-xs font-medium <%= p.statusColor %>"><%= p.statusLabel %></span>
            </td>
            <td class="px-4 py-3"><%= p.dataValidade %></td>
            <td class="px-4 py-3 space-x-2">
              <a href="/produtos/<%= p.id %>/editar" class="inline-flex items-center rounded bg-emerald-600 px-3 py-1.5 text-white text-xs hover:bg-emerald-700">Editar</a>
              <form action="/produtos/<%= p.id %>/excluir" method="POST" class="inline-block m-0 p-0" onsubmit="return confirmarExclusao('Excluir produto?');">
                <button type="submit" class="inline-flex items-center rounded bg-red-600 px-3 py-1.5 text-white text-xs hover:bg-red-700 shadow-none">Excluir</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5" class="px-4 py-6 text-center text-gray-500">Nenhum produto cadastrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
<%- include('../partials/end') %>